<!DOCTYPE html PUBLIC>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>Login</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
	<link href="/css/loginStyle.css" rel="stylesheet" type="text/css" />
</head>

<body>
	<div class="container">
		<!--Header-->
		<div class="header">
			<h5>Login</h5>
		</div>

		<!--Content-->
		<div class="content">
			<div class="row">
				<!--Form-->
				<div class="col-12 form-div">
					<form class="form" name="loginForm" id="loginForm" action="login" method="post">
						<!--Inputs-->
						<div class="row g-3 aling-items-center">
							<div class="col-3">
								<label for="inputId" class="col-form-label">Roll No. (ID):</label>
							</div>
							<div class="col-6">
								<% if(locals.user) {%>
									<input type="number" id="inputId" name="inputId" class="form-control" min="100000"
										required value="<%= user.id %>" />
									<%}else{%>
											<input type="number" id="inputId" name="inputId" class="form-control"
												min="100000" required />
											<%}%>
							</div>
						</div>
						<div class="row g-3 aling-items-center">
							<div class="col-3">
								<label for="inputDate" class="col-form-label">Day of Birth:</label>
							</div>
							<div class="col-6">
								<input type="date" id="inputDate" name="inputDate" class="form-control" required />
							</div>
						</div>
					</form>
				</div>

				<!--Messages-->
				<div class="row g-3 aling-items-center messages">
					<div class="col-3"></div>
					<div class="col-6">
						Don't have an account? <a href="signUp">Sign up here</a>
					</div>
				</div>
			</div>
		</div>

		<!--Buttons-->
		<div class="buttonDiv">
			<input type="submit" form="loginForm" value="Login" />
		</div>
	</div>

	<!--Bootstrap Bundle with Popper -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
		crossorigin="anonymous"></script>
</body>

</html>